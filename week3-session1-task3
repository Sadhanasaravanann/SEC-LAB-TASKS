<body>
  <div class="container">
    <h1>Object Destructuring & Spread</h1>
    <p>Click the button to see examples of destructuring and spread operator.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== Basic Destructuring ===");
      const student = { name: "Alice", age: 22, course: "CS" };
      const { name, age, course } = student;
      log(`Name: ${name}, Age: ${age}, Course: ${course}`);

      log("\n=== Destructuring with Default Values ===");
      const { city = "Unknown", country = "Unknown" } = student;
      log(`City: ${city}, Country: ${country}`);

      log("\n=== Nested Object Destructuring ===");
      const employee = {
        id: 101,
        personal: { firstName: "Bob", lastName: "Smith" },
        role: "Developer"
      };
      const {
        personal: { firstName, lastName },
        role
      } = employee;
      log(`Employee: ${firstName} ${lastName}, Role: ${role}`);

      log("\n=== Spread Operator ===");
      const clonedStudent = { ...student };
      log(`Cloned student: ${JSON.stringify(clonedStudent)}`);

      const extraInfo = { city: "New York", country: "USA" };
      const mergedStudent = { ...student, ...extraInfo };
      log(`Merged student: ${JSON.stringify(mergedStudent)}`);

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
</html>
