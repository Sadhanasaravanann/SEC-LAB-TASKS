<body>
  <div class="container">
    <h1>Function Context & Advanced Calls</h1>
    <p>Click the button to see examples of call(), apply(), and bind().</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== Function Context Example ===");

      const person1 = { name: "Alice" };
      const person2 = { name: "Bob" };

      function greet(greeting, punctuation) {
        log(`${greeting}, ${this.name}${punctuation}`);
      }

      log("\n--- Using call() ---");
      greet.call(person1, "Hello", "!");
      greet.call(person2, "Hi", "!!");

      log("\n--- Using apply() ---");
      greet.apply(person1, ["Good morning", "!!!"]);
      greet.apply(person2, ["Good evening", "?"]);

      log("\n--- Using bind() ---");
      const greetAlice = greet.bind(person1, "Hey");
      greetAlice("!"); 

      const greetBob = greet.bind(person2);
      greetBob("Hello", "!!");

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
