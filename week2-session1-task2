<body>
  <div class="container">
    <h1>Function Expressions & Arrow Functions</h1>
    <p>Click the button to see examples of function expressions and arrow functions.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    // Helper for displaying text
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== Traditional Function Declaration ===");
      function add(a, b) {
        return a + b;
      }
      log(`add(5, 3) = ${add(5, 3)}`);

      log("\n=== Converted to Function Expression ===");
      const subtract = function(a, b) {
        return a - b;
      };
      log(`subtract(10, 4) = ${subtract(10, 4)}`);

      log("\n=== Using Arrow Function ===");
      const multiply = (a, b) => a * b;
      log(`multiply(6, 7) = ${multiply(6, 7)}`);

      log("\n=== Arrow Function with Single Parameter ===");
      const square = n => n * n;
      log(`square(5) = ${square(5)}`);

      log("\n=== Arrow Function with No Parameters ===");
      const greet = () => "Hello from an arrow function!";
      log(greet());

      log("\n=== Multi-line Arrow Function ===");
      const divide = (a, b) => {
        if (b === 0) {
          return "Cannot divide by zero";
        }
        return a / b;
      };
      log(`divide(20, 4) = ${divide(20, 4)}`);

      log("\n=== Difference in 'this' Behavior ===");
      const personTraditional = {
        name: "Alice",
        traditionalFunction: function () {
          log(`Traditional Function: Hello, I'm ${this.name}`);
        },
        arrowFunction: () => {
          
          log(`Arrow Function: Hello, I'm ${this.name}`);
        }
      };
      personTraditional.traditionalFunction();
      personTraditional.arrowFunction();

      log("\n=== Simple Arrow Function Use Cases ===");
      const numbers = [1, 2, 3, 4, 5];
      const doubled = numbers.map(n => n * 2);
      const evens = numbers.filter(n => n % 2 === 0);
      log(`Original numbers: ${numbers}`);
      log(`Doubled using arrow: ${doubled}`);
      log(`Even numbers using arrow: ${evens}`);

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
</html>

