<body>
  <div class="container">
    <h1>Destructuring, Notation & Iteration</h1>
    <p>Click the button to see examples of destructuring, dot/bracket notation, and iteration.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== Array Destructuring ===");
      const numbers = [10, 20, 30, 40];
      const [first, second, ...rest] = numbers;
      log(`First: ${first}, Second: ${second}, Rest: [${rest}]`);

      log("\n=== Object Destructuring ===");
      const student = {
        name: "Alice",
        age: 22,
        address: { city: "New York", country: "USA" }
      };
      const { name, age, address: { city, country } } = student;
      log(`Name: ${name}, Age: ${age}, City: ${city}, Country: ${country}`);

      log("\n=== Accessing Properties ===");
      log(`Dot notation: ${student.name}`);
      log(`Bracket notation: ${student['age']}`);

      log("\n=== Iterating through object using for...in ===");
      for (let key in student) {
        log(`Key: ${key}, Value: ${JSON.stringify(student[key])}`);
      }

      log("\n=== Iterating using Object.keys(), Object.values(), Object.entries() ===");
      const keys = Object.keys(student);
      log(`Keys: [${keys}]`);

      const values = Object.values(student);
      log(`Values: [${values.map(v => JSON.stringify(v))}]`);

      const entries = Object.entries(student);
      entries.forEach(([key, value]) => {
        log(`Entry - Key: ${key}, Value: ${JSON.stringify(value)}`);
      });

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
</html>

