<body>
  <div class="container">
    <h1>Break and Continue Example</h1>
    <p>Click the button to run the demo showing <b>break</b> and <b>continue</b> usage.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function isPrime(num) {
      if (num < 2) return false;
      for (let i = 2; i <= Math.sqrt(num); i++) {
        if (num % i === 0) return false;
      }
      return true;
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      
      log("=== Using break: Stop at the first prime number between 10 and 30 ===");
      for (let n = 10; n <= 30; n++) {
        if (isPrime(n)) {
          log(`Found first prime number: ${n}`);
          break; // exits the loop immediately
        }
        log(`Checked ${n}, not prime`);
      }
      log("\n=== Using continue: Print only odd numbers between 1 and 20 ===");
      for (let i = 1; i <= 20; i++) {
        if (i % 2 === 0) {
          continue; // skip even numbers
        }
        log(`Odd number: ${i}`);
      }

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
