<body>
  <div class="container">
    <h1>Math & String Built-in Functions</h1>
    <p>Click the button to see examples of Math & String functions.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== Math Functions ===");

      const rand = Math.random(); // 0 ≤ rand < 1
      log(`Random number (0-1): ${rand}`);

      const num = 4.7;
      log(`Original number: ${num}`);
      log(`Math.round(${num}) = ${Math.round(num)}`);
      log(`Math.floor(${num}) = ${Math.floor(num)}`);
      log(`Math.ceil(${num}) = ${Math.ceil(num)}`);

      const numbers = [10, 5, 20, 3, 8];
      log(`Numbers array: [${numbers}]`);
      log(`Math.min(...numbers) = ${Math.min(...numbers)}`);
      log(`Math.max(...numbers) = ${Math.max(...numbers)}`);

      log("\n=== String Functions ===");

      const str = "Hello, JavaScript!";
      log(`Original string: "${str}"`);
      log(`str.toUpperCase() = "${str.toUpperCase()}"`);
      log(`str.toLowerCase() = "${str.toLowerCase()}"`);
      log(`str.includes("Java") = ${str.includes("Java")}`);
      log(`str.includes("Python") = ${str.includes("Python")}`);
      log(`str.replace("JavaScript", "JS") = "${str.replace("JavaScript", "JS")}"`);
      log(`str.substring(7, 17) = "${str.substring(7, 17)}"`);

      log("\n✅ Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
