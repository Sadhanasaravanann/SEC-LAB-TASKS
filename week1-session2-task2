<body>
  <div class="container">
    <h1>JavaScript Loop Control Practice</h1>
    <p>Click the button to run different loop examples.</p>
    <button id="runDemo">Run Demo</button>
    <div id="output"></div>
  </div>

  <script>
    function log(message) {
      const output = document.getElementById("output");
      const p = document.createElement("p");
      p.textContent = message;
      output.appendChild(p);
      console.log(message);
    }

    function runDemo() {
      const output = document.getElementById("output");
      output.innerHTML = "";
      console.clear();

      log("=== while Loop: Print numbers 1 to 10 ===");
      let i = 1;
      while (i <= 10) {
        log(i);
        i++;
      }

      log("\n=== do-while Loop: Simulated user input check ===");
      let secretNumber = 5;
      let guess = 2; // incorrect at first
      do {
        log(`Guessed: ${guess}`);
        if (guess !== secretNumber) {
          log("Wrong guess! Trying again...");
          guess++; // simulate user trying again
        }
      } while (guess !== secretNumber);
      log(`Correct! The secret number was ${secretNumber}.`);

      log("\n=== for Loop: Sum of first N natural numbers ===");
      let N = 10;
      let sum = 0;
      for (let j = 1; j <= N; j++) {
        sum += j;
      }
      log(`Sum of first ${N} natural numbers = ${sum}`);

      
      log("\n=== Nested for Loops: Multiplication Table (1 to 5) ===");
      for (let row = 1; row <= 5; row++) {
        let rowResult = "";
        for (let col = 1; col <= 5; col++) {
          rowResult += `${row * col}\t`;
        }
        log(rowResult);
      }

      log("\nâœ… Demo complete!");
    }

    document.getElementById("runDemo").addEventListener("click", runDemo);
  </script>
</body>
